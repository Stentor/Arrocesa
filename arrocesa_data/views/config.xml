<?xml version="1.0" ?>
<odoo>
    <data>
    
        <record id="arrocesa_inherit_res_config_view" model="ir.ui.view">
            <field name="name">arrocesa.inherit.res.config.view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@data-key='stock']/h2[1]" position="before">
                    <h2>Unidad de medida modificable</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="modificable_uom" class="col-md-3 o_light_label"/>
                                        <field name="modificable_uom"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>
        
    </data>
</odoo>
