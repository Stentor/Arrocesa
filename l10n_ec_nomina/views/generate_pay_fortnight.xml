                        </group> 
                        <group states="init">
                            <field name="diario_id" required="1"/>
                           
                        </group> 
                    </group>
                    <group states="success">
                        <h1>PAGOS REALIZADOS CON Ã‰XITO</h1>
                    </group> 
                           
                </sheet>
